<p id="notice"><%= notice %></p>

<h1>Players</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Country</th>
      <th>Birthdate</th>
      <th>Foot</th>
      <th>Player style</th>
      <th>Team</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @players.each do |player| %>
      <tr>
        <td><%= player.name %></td>
        <td><%= player.country %></td>
        <td><%= player.birthdate %></td>
        <td><%= player.foot %></td>
        <td><%= player.originposition %></td>
        <td><%= player.team.name %></td>
        <td><%= link_to 'Show', player %></td>
        <td><%= link_to 'Edit', edit_player_path(player) %></td>
        <td><%= link_to 'Destroy', player, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<tr>
<td><%= link_to 'New Player', new_player_path %></td>
<td><%= link_to 'Back', root_path %></td>
</tr>
